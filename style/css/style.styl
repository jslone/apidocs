@import 'nib'

@import url('https://fonts.googleapis.com/css?family=Open+Sans:400,800');

/*global-reset()*/

foreground-color	= #D8D8D8
background-color	= #FFFFFF
accent-color		= #000000

html
body
	height 100%

body
	font-family 'Arial'
	background-color background-color
	color accent-color
	margin 0

a:link
a:visited
a:hover
a:active
	color inherit
	text-decoration none

#header
	font-family 'Open Sans'
	width 100%
	background-color accent-color
	color background-color
	overflow hidden

#logo
	margin-left 2em
	float left

#menu-container
	margin-top 2em
	margin-right 2em
	float right

#menu-container input[type=button]
#menu-container input[type=submit]
	font-family inherit
	background-color foreground-color + #101010
	border 0px
	border-radius 2px

#menu-container input[type=button]:hover
#menu-container input[type=submit]:hover
	font-family inherit
	background-color foreground-color - #101010
	border 0px
	border-radius 2px

#login-container
	float left

#search-container
	float right

#nav-menu
	background-color foreground-color
	width 200px
	height 400px
	float left
	border-radius 5px

#nav-menu ul
	list-style-type none

#nav-menu button
	font-family inherit
	background-color background-color
	border 0px
	border-radius 2px

#nav-menu button:hover
	font-family inherit
	background-color background-color - #101010
	border 0px
	border-radius 2px

#main-content
	margin-left 220px
	height 100%

#footer
	position absolute
	bottom 0
	width 100%
	background-color foreground-color
	color accent-color

.container
	max-width 1000px
	margin-top 1em
	margin-bottom 1em
	margin-left auto
	margin-right auto

.unit
	background-color foreground-color
	color accent-color
	border-radius 5px
	padding 2em
	padding-top 1px
	margin 1em


.breadcrumbs
	background-color foreground-color
	color accent-color
	border-radius 5px
	padding 2em
	padding-top 1px
	margin 1em
	height 1em
